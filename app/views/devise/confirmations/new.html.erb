<% provide :title, t("Resend confirmation instructions") %>
<h2><%= yield(:title) %></h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, data: { ajax: false } }) do |f| %>
  <%= devise_error_messages! %>

  <div data-role="fieldcontain">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div><%= f.submit t("Resend confirmation instructions"), data: { inline: true } %></div>
<% end %>

<%= render "devise/shared/links" %>
